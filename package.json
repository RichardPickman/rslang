{
  "name": "learn-words-rs-rest-service",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": ""
  },
  "type": "commonjs",
  "description": "LearnWords REST service for RS School",
  "main": "src/server.ts",
  "scripts": {
    "start": "node src/server.ts",
    "start:dev": "nodemon src/server.ts",
    "lint": "eslint ./src --ignore-path .gitignore --fix",
    "heroku-postbuild": "npm install --only=dev",
    "prettier": "prettier --write src/",
    "ts:build": "tsc ./src/server.ts --esModuleInterop --outDir ./dist/",
    "ts:run": "node ./dist/server.js"
  },
  "keywords": [
    "rs",
    "school",
    "rest",
    "node",
    "express",
    "LearnWords"
  ],
  "license": "ISC",
  "engines": {
    "node": "12.16.x"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "cors": "^2.8.5",
    "cross-env": "6.0.3",
    "dotenv": "8.2.0",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "http-errors": "^1.7.3",
    "http-status-codes": "^1.4.0",
    "joi": "^17.6.0",
    "joi-objectid": "^3.0.1",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.5.2",
    "morgan": "^1.10.0",
    "npm": "^6.14.11",
    "object-id-joi-extension": "^1.0.1",
    "swagger-ui-express": "4.1.2",
    "uuid": "^8.3.2",
    "winston": "^3.2.1",
    "yamljs": "0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/http-errors": "^1.8.2",
    "@types/jsonwebtoken": "^8.5.8",
    "@types/morgan": "^1.9.3",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@types/yamljs": "^0.2.31",
    "eslint": "6.7.2",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "joi-to-typescript": "^4.0.5",
    "lint-staged": "9.5.0",
    "nodemon": "^2.0.19",
    "prettier": "1.19.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  }
}
